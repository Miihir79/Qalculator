<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Qalculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azure_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="android:navigationBarColor">#121212</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/activity_background</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.Qalculator.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextBtn.Large" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">@color/azure_blue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:insetLeft">4dp</item>
        <item name="android:insetRight">4dp</item>b
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>


    <style name="TextBtn.Large.Secondary" parent="TextBtn.Large">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>


</resources>